		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.6",
		"eslint-plugin-storybook": "^0.8.0",
		"eslint-plugin-unicorn": "^51.0.1",
		"jsdom": "^24.0.0",
		"postcss": "^8.4.38",
