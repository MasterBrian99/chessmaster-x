		"react": "^18.2.0",
		"react-chessboard": "^4.5.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.0.1",
		"react-router-dom": "^6.22.3"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.2.25",
		"@faker-js/faker": "^8.4.1",
		"@playwright/test": "^1.42.1",
		"@storybook/addon-essentials": "^8.0.5",
